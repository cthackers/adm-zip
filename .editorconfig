# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

# Set default charset
[*.{js,json,txt,md}]
charset = utf-8
indent_style = space
insert_final_newline = true

[*.{js,md,json}]
trim_trailing_whitespace = true

[*.{js,md}]
indent_size = 4

[*.js]
quote_type = double

[*.{yml,json}]
indent_size = 2
